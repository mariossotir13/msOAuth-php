{# empty Twig template #}
{% extends "::base.html.twig" %}

{% block title %}Παρουσίαση της συλλογής: {{ group_title }} | Πελάτης{% endblock %}
{% block stylesheets %}
<link href="/bundles/msdemo/css/bootstrap-3.1.1/css/bootstrap.min.css" rel="stylesheet" />
<link href="/bundles/msdemo/jsImgSlider/1/js-image-slider.css" rel="stylesheet" type="text/css" />
<link href="/bundles/msdemo/css/main.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header"><a class="navbar-brand" href="#">Slide-show Maker</a></div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('ms_demo_homepage') }}">Αρχική</a></li>
                <li><a href="#">Επικοινωνία</a></li>
            </ul>
        </div>
    </div>
</div>
<div class="msdemo-main-container">
    <div id="sliderFrame">
        <div id="sliderDetails">
            <span id="groupName">{{ group_title }}</span>
        </div>
        <div id="slider">
            {% for title in image_titles %}
            <a class="lazyImage" href="{{ path('ms_demo_resource_image', { 'name': title }) }}" title="{{ title }}"></a>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="/bundles/msdemo/jsImgSlider/1/js-image-slider.js"></script>
{% endblock %}