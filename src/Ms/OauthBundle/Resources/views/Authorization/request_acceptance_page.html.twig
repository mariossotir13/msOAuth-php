{# Authorization Request Acceptance Page #}
{% extends "MsOauthBundle:Authorization:base.html.twig" %}

{% block body %}
<p>Η εφαρμογή "{{ client.appTitle }}" ζητάει εξουσιοδότηση για τα εξής δικαιώματα:</p>
<ul>
    {% for scope in scopes %}
        <li>{{ scope.description }}</li>
    {% endfor %}
</ul>
<a href="{{ path('ms_oauth_authorization', {'authz_rq': authz_rq, 'authz_rq_accept': 1}) }}">Δέχομαι</a> 
<a href="{{ path('ms_oauth_authorization_access_denied', {'authz_rq': authz_rq}) }}">Αρνούμαι</a>
{% endblock %}
